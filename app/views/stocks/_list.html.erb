<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current</th>
      <% if @user.id == current_user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td><%= user_stock.name %>
        <td><%= user_stock.ticker %>
        <td><%= user_stock.last_price %>
        <% if @user.id == current_user.id %>
          <td><%= link_to "Delete", user_stock_path(user_stock), method: :delete, data: {confirm: "Are You Sure?"}, class: "btn btn-xs btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>